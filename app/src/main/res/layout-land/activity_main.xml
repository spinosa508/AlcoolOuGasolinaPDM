<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:backgroundTint="#009696"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="600dp"
        android:layout_height="300dp"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="2dp"
        android:background="@drawable/rounded_layout"
        android:backgroundTint="#66000000"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="30dp"
            android:contentDescription="@string/descricaoImagem"
            android:paddingVertical="3dp"
            android:textAlignment="center"
            app:srcCompat="@mipmap/ic_joao_pdm_foregrounf" />

        <Button
            android:id="@+id/btCalcular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="30dp"
            android:backgroundTint="#CB584C"
            android:text="@string/Calcular" />

        <TextView
            android:id="@+id/titulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|left"
            android:layout_marginLeft="30dp"
            android:text="@string/GasOuAlc"
            android:textAlignment="center"
            android:textColor="#FFC107"
            android:textSize="25sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edAlcool"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|left"
            android:layout_marginLeft="30dp"
            android:ems="10"
            android:hint="@string/Alcool"
            android:inputType="numberDecimal" />

        <EditText
            android:id="@+id/edGasolina"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|left"
            android:layout_marginLeft="30dp"
            android:ems="10"
            android:hint="@string/Gasolina"
            android:inputType="numberDecimal" />

        <Switch
            android:id="@+id/swPercentual"
            android:layout_width="116dp"
            android:layout_height="51dp"
            android:layout_gravity="right"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="30dp"
            android:text="@string/_75" />

        <TextView
            android:id="@+id/textMsg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|top"
            android:text="@string/emDuvida"
            android:textColor="@color/white"
            android:textSize="20sp" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>